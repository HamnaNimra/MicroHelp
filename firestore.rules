rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow users to update their own fcmToken field
      allow update: if request.auth != null
        && request.auth.uid == userId
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['fcmToken']);
      match /badges/{badgeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /posts/{postId} {
      allow create: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
      // Owner can update; anyone can set acceptedBy to themselves when it's currently unset (accept); helper can update (e.g. complete)
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.userId
        || (resource.data.get('acceptedBy', null) == null
            && request.resource.data.get('acceptedBy', null) == request.auth.uid
            && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['acceptedBy']))
        || request.auth.uid == resource.data.get('acceptedBy', null)
      );
      allow read: if request.auth != null;
    }

    match /messages/{postId}/messages/{messageId} {
      allow create: if request.auth != null
        && request.resource.data.senderId == request.auth.uid;
      allow read: if request.auth != null && (
        request.auth.uid == get(/databases/$(database)/documents/posts/$(postId)).data.userId
        || request.auth.uid == get(/databases/$(database)/documents/posts/$(postId)).data.acceptedBy
      );
      allow update, delete: if false;
    }

    match /verification_requests/{requestId} {
      // Users can create requests for themselves and read their own
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null
        && resource.data.userId == request.auth.uid;
      // Only admins can update status (done manually via Firebase Console for MVP)
      allow update, delete: if false;
    }

    match /reports/{reportId} {
      // Any authenticated user can create a report with their own ID as reporter
      allow create: if request.auth != null
        && request.resource.data.reporterId == request.auth.uid;
      // Users can read their own reports
      allow read: if request.auth != null
        && resource.data.reporterId == request.auth.uid;
      // Only admins can update/delete reports (via Firebase Console for MVP)
      allow update, delete: if false;
    }
  }
}
