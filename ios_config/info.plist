<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

	<!-- App Identity -->
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>

	<key>CFBundleDisplayName</key>
	<string>MicroHelp</string>

	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>

	<key>CFBundleIdentifier</key>
	<string>com.microhelp.microHelp</string>

	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>

	<key>CFBundleName</key>
	<string>micro_help</string>

	<key>CFBundlePackageType</key>
	<string>APPL</string>

	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>

	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>

	<key>LSRequiresIPhoneOS</key>
	<true/>

	<!-- UI -->
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>

	<key>UIMainStoryboardFile</key>
	<string>Main</string>

	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>

	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>

	<!-- ================= LOCATION ================= -->

	<key>NSLocationWhenInUseUsageDescription</key>
	<string>MicroHelp uses your location to show nearby help requests.</string>

	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>MicroHelp uses your location to keep help requests accurate even when the app is not open.</string>

	<!-- Precise location (iOS 14+) -->
	<key>NSLocationTemporaryUsageDescriptionDictionary</key>
	<dict>
		<key>PreciseLocation</key>
		<string>MicroHelp needs precise location to accurately match nearby help.</string>
	</dict>

	<key>UIBackgroundModes</key>
	<array>
		<string>location</string>
		<string>fetch</string>
	</array>

	<!-- ================= MEDIA ================= -->

	<key>NSCameraUsageDescription</key>
	<string>MicroHelp lets you take photos for help requests.</string>

	<key>NSPhotoLibraryUsageDescription</key>
	<string>MicroHelp lets you upload images for help requests.</string>

	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>MicroHelp can save images to your photo library.</string>

	<key>NSMicrophoneUsageDescription</key>
	<string>MicroHelp uses the microphone for voice features.</string>

	<!-- ================= NETWORK ================= -->

	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
	</dict>

	<!-- ================= FIREBASE / GOOGLE ================= -->

	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>com.googleusercontent.apps.937337910956-crsaakknmpf9dappi8ev893b0c9jbrp4</string>
			</array>
		</dict>
	</array>

	<key>FirebaseAppDelegateProxyEnabled</key>
	<true/>

</dict>
</plist>
